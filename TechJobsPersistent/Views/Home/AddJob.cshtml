@model TechJobsPersistent.ViewModels.AddJobViewModel //added

<h1>Add a Job</h1>

<form asp-controller="Home"
      asp-action="ProcessAddJobForm"
      method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>@*added asp-for="Name"*@
        <input class="form-control" />
        <span asp-validation-for="Name"></span>@*added asp-validation-for="Name"*@
    </div>

    <div class="form-group">
        @*added for Employer Id*@
    <label asp-for="EmployerId">Employer</label>
    <select asp-for="EmployerId" asp-items="Model.Employers">
    </select>
</div>

<div class="form-group">
    @*added for skills*@
@foreach (Skill skill in Model.Skills)
{
    <label for="@skill.Id">@skill.Name</label>
    <input type="checkbox"
           name="selectedSkills"
           value="@skill.Id" />}
</div>


<input type="submit" value="Add Job" />
</form>

<br />

<div>
    <a asp-controller="Employer" asp-action="Add">Create a New Employer</a>@*Allow user to add new employer*@
</div>

<br />

<div>
    <a asp-controller="Skill" asp-action="Add">Create a New Skill</a>@*Allow user to add new skill*@
</div>

